.main-screen {
  position:fixed;
  text-align center
  top: 50%;
  left: 50%;
  width:24em;
  height:18em;
  margin-top: -9em; /*set to a negative number 1/2 of your height*/
  margin-left: -12em; /*set to a negative number 1/2 of your width*/
}
.button, .button--material {
  color: black;
  width 80%
  padding-top 10px
  background-color white
  border 1px solid black
  border-radius 0px
  height 50px
  white-space initial
  font-size 12px
  margin 10px
}
