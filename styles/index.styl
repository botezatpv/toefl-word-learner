.page--material__background
  background-color: #fafafa

.main-screen {
  position:fixed;
  text-align center
  top: 40%;
  left: 50%;
  width:24em;
  height:18em;
  margin-top: -9em; /*set to a negative number 1/2 of your height*/
  margin-left: -12em; /*set to a negative number 1/2 of your width*/
}
.main-screen > h2 {
  width 80%
  margin-left 10%
}
select,
button {
  color: #A0A0A0;
  width 80%
  background-color white
  border 2px solid #73B7FF;
  border-radius 0px
  height 50px
  white-space initial
  font-size 14px
  margin 5px
}

.correct-button {
  color: #323232;
  background-color #92DEB1;
  border 2px solid #92DEB1;
}

.error-button {
  color: #323232;
  background-color #F03040;
  border 2px solid #F03040;
}
.bookPageSelect,
.control-section {
  position fixed;
  bottom 5%
}
.control-section {
  right 5%  
}
.control-section > button {
  height 40px
  width 120px
}

.bookPageSelect {
  left 5%
}

.bookPageSelect > select {
  width 120px
  height 40px
}