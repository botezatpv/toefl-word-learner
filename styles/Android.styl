$material-switch-inactive-thumb-color = #f1f1f1
$material-switch-active-background-color = #CF7D70
$material-switch-inactive-background-color = #b0afaf
$material-range-track-color = #e0e0e0
$material-range-thumb-color = #C6442F
$material-toolbar-background-color = #C6442F
$material-toolbar-text-color = #ffffff
$material-toolbar-button-color = #ffffff
$material-toolbar-button-active-color = #26a69a
$material-button-background-color = #C6442F
$material-button-text-color = #ffffff
$material-checkbox-active-color = #C6442F
$material-checkbox-inactive-color = #717171
$material-checkbox-checkmark-color = #ffffff
$material-radio-button-active-color = #C6442F
$material-radio-button-inactive-color = #717171
$material-text-input-text-color = #212121
$material-text-input-active-color = #C6442F
$material-text-input-inactive-color = #afafaf
$material-dialog-background-color = #ffffff
$material-alert-dialog-background-color = #ffffff
$material-alert-dialog-title-color = #212121
$material-alert-dialog-content-color = #727272
$material-alert-dialog-button-color = #C6442F
$material-progress-bar-primary-color = #C6442F
$material-progress-bar-secondary-color = #80cbc4
$material-progress-bar-background-color = #e0e0e0
$material-progress-circle-primary-color = #C6442F
$material-progress-circle-secondary-color = #80cbc4
$material-tabbar-background-color = #C6442F
$material-tabbar-text-color = rgba(255, 255, 255, 0.6)
$material-tabbar-highlight-text-color = #ffffff
$material-tabbar-highlight-color = #26a69a

.toolbar--material
  background-color: $material-toolbar-background-color
.tabbar--material
  background-color: $material-tabbar-background-color
.text-input--material__label--active
  color: $material-tabbar-background-color
.button-bar
  position: relative

.button-bar__item
  padding-right: 2px

.button-bar__item:first-child > .button-bar__button
  border-left: 1px solid $material-button-background-color
  border-right: 1px solid $material-button-background-color

.button-bar__item:last-child > .button-bar__button
  border-right: 1px solid $material-button-background-color

.button-bar__button
  background-color: transparent
  color: $material-button-background-color
  border: 0px solid $material-button-background-color
  border-top: 1px solid $material-button-background-color
  border-bottom: 1px solid $material-button-background-color
  border-right: 1px solid $material-button-background-color
  border-left: 1px solid $material-button-background-color
  height: 30px
  line-height: 30px
  font-size: 15px
  width: 50px

.button-bar__button:active,
:active + .button-bar__button
  background-color: $material-button-background-color
  border: 1px solid $material-button-background-color
  border-top: 1px solid $material-button-background-color
  border-bottom: 1px solid $material-button-background-color
  border-right: 1px solid $material-button-background-color
  height: 30px
  line-height: 30px
  font-size: 15px
  width: 50px

.button-bar__item.active > .button-bar__button,
:checked + .button-bar__button
  background-color: $material-button-background-color
  color: $material-text-color

.list-header--material
  background-color: $background-color

.list-header
  color $material-button-background-color

:checked + .switch__toggle
  background-color: $material-switch-active-background-color
:checked + .switch__toggle > .switch__handle
   background-color: $material-switch-active-thumb-color

.text-input--material:focus
  background-image: -webkit-linear-gradient($material-button-background-color, $material-button-background-color), -webkit-linear-gradient(bottom, transparent 1px, #afafaf 1px);
  background-image: linear-gradient($material-button-background-color, $material-button-background-color), linear-gradient(to top, transparent 1px, #afafaf 1px);

.progress-circular__primary
  stroke: $material-switch-active-background-color;

.progress-circular__secondary
  stroke: $material-switch-active-thumb-color;
